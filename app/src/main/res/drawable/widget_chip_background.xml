<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="@dimen/margin_0"
                android:left="@dimen/margin_1"
                android:right="@dimen/margin_1"
                android:top="@dimen/margin_0" />
            <solid android:color="@color/black_translucent_2" />
            <corners android:radius="@dimen/widget_corner_radius" />
        </shape>
    </item>

    <item>
        <ripple android:color="@color/accent">
            <item android:id="@android:id/mask">
                <shape>
                    <padding
                        android:bottom="@dimen/margin_0"
                        android:left="@dimen/margin_1"
                        android:right="@dimen/margin_1"
                        android:top="@dimen/margin_0" />
                    <solid android:color="#000" />
                    <corners android:radius="@dimen/widget_corner_radius" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>