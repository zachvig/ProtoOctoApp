<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:minHeight="110dp">

    <ImageView
        android:id="@+id/colorStrip"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:importantForAccessibility="no"
        android:src="@drawable/widget_color_strip" />

    <include
        layout="@layout/app_widget_pogress_active_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_1_2"
        android:layout_marginTop="@dimen/margin_1"
        android:layout_marginBottom="@dimen/margin_1"
        android:layout_toStartOf="@+id/buttonRefresh" />

    <TextView
        android:id="@+id/updatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/margin_1"
        android:background="@drawable/widget_chip_background"
        android:textColor="@color/black_translucent"
        android:visibility="gone"
        tools:text="Updated at 18:45" />

    <TextView
        android:id="@+id/live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="top|end"
        android:layout_margin="@dimen/margin_1"
        android:layout_marginBottom="@dimen/margin_1"
        android:background="@drawable/widget_chip_live_background"
        android:paddingHorizontal="@dimen/margin_1"
        android:paddingVertical="@dimen/margin_0"
        android:paddingStart="@dimen/margin_2"
        android:text="@string/cd_live"
        android:textAppearance="@style/OctoTheme.TextAppearance"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/buttonRefresh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/buttonCancel"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="@dimen/margin_1"
        android:layout_marginEnd="@dimen/margin_0_1"
        android:layout_toStartOf="@id/buttonPause"
        android:background="@drawable/widget_button_background"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_round_refresh_24"
        android:tint="@color/black_translucent" />

    <ImageButton
        android:id="@+id/buttonCancel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/margin_1"
        android:layout_marginBottom="@dimen/margin_1"
        android:background="@drawable/widget_button_background"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_round_close_24"
        android:tint="@color/black_translucent" />

    <ImageButton
        android:id="@+id/buttonResume"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/buttonCancel"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/margin_0_1"
        android:layout_toStartOf="@id/buttonCancel"
        android:background="@drawable/widget_button_background"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_round_play_arrow_24"
        android:tint="@color/black_translucent" />

    <ImageButton
        android:id="@+id/buttonPause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/buttonCancel"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/margin_0_1"
        android:layout_toStartOf="@id/buttonResume"
        android:background="@drawable/widget_button_background"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_round_pause_24"
        android:tint="@color/black_translucent" />

</RelativeLayout>