<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/quick_access_item_background_base">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/quick_access_item_background_settings"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginVertical="@dimen/margin_0_1"
            android:layout_marginStart="@dimen/margin_1_2"
            android:importantForAccessibility="no"
            android:tint="@color/light_text"
            tools:src="@drawable/ic_round_settings_24" />

        <ImageView
            android:id="@+id/pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/icon"
            android:layout_alignBottom="@id/icon"
            android:background="@drawable/bg_circle"
            android:backgroundTint="@color/menu_pin_background"
            android:importantForAccessibility="no"
            android:padding="1dp"
            android:src="@drawable/ic_round_push_pin_10"
            android:tint="@color/menu_pin_foreground"
            android:translationX="2dp"
            android:translationY="2dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginVertical="@dimen/margin_0_1"
            android:layout_marginStart="@dimen/margin_1"
            android:layout_marginEnd="@dimen/margin_1_2"
            android:layout_toEndOf="@id/icon"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textAppearance="@style/OctoTheme.TextAppearance.Button.Menu"
            android:textColor="@color/dark_text"
            tools:text="Test" />

    </RelativeLayout>
</FrameLayout>