<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/sign_in_nav_graph">

    <action
        android:id="@+id/action_sign_in_required"
        app:destination="@id/sign_in_nav_graph"
        app:popUpTo="@id/main_nav_graph"
        app:popUpToInclusive="true" />

    <include
        app:graph="@navigation/sign_in_nav_graph" />

    <action
        android:id="@+id/action_sign_in_completed"
        app:destination="@id/homeFragment"
        app:popUpTo="@id/main_nav_graph"
        app:popUpToInclusive="true" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="de.crysxd.octoapp.HomeFragment"
        android:label="HomeFragment" >
    </fragment>
</navigation>