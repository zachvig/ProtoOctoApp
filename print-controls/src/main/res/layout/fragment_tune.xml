<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.crysxd.octoapp.base.ui.common.OctoScrollView
        android:id="@+id/octoScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingLeft="@dimen/margin_2"
        android:paddingTop="@dimen/common_view_top_padding"
        android:paddingRight="@dimen/margin_2"
        android:paddingBottom="@dimen/common_view_top_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/dataHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_3"
                app:cardBackgroundColor="@color/input_background"
                app:cardCornerRadius="@dimen/common_corner_radius"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_2"
                        android:layout_marginTop="@dimen/margin_2"
                        android:layout_marginEnd="@dimen/margin_2"
                        android:drawablePadding="@dimen/margin_2"
                        android:text="Why are the values not always shown?"
                        android:textAppearance="@style/OctoTheme.TextAppearance.SectionHeader"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_2"
                        android:layout_marginTop="@dimen/margin_0"
                        android:layout_marginEnd="@dimen/margin_2"
                        android:drawablePadding="@dimen/margin_2"
                        android:text="OctoPrint can't query fan speed and rates. Values can only be shown if changes are witnessed."
                        android:textAppearance="@style/OctoTheme.TextAppearance"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView" />

                    <Button
                        android:id="@+id/buttonHideHint"
                        style="@style/OctoTheme.Widget.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_1"
                        android:layout_marginEnd="@dimen/margin_2"
                        android:layout_marginBottom="@dimen/margin_1"
                        android:text="Understood"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <de.crysxd.octoapp.base.ui.common.OctoTextInputLayout
                android:id="@+id/feedRateInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_1"
                app:example="100"
                app:icon="@drawable/ic_speed_20px"
                app:label="Feed Rate (%)"
                app:labelActive="Feed rate as number (100 is default)" />

            <de.crysxd.octoapp.base.ui.common.OctoTextInputLayout
                android:id="@+id/flowRateInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_1"
                app:example="100"
                app:icon="@drawable/ic_flow_20px"
                app:label="Flow Rate (%)"
                app:labelActive="Flow rate as number (100 is default)" />

            <de.crysxd.octoapp.base.ui.common.OctoTextInputLayout
                android:id="@+id/fanSpeedInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:example="100"
                app:icon="@drawable/ic_fan_20px"
                app:label="Fan Speed (%)"
                app:labelActive="Fan speed from 0 to 100" />

        </LinearLayout>

    </de.crysxd.octoapp.base.ui.common.OctoScrollView>

    <FrameLayout
        android:id="@+id/buttonApplyContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="@dimen/margin_2">

        <Button
            android:id="@+id/buttonApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </FrameLayout>

</FrameLayout>