<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_in_nav_graph"
    app:startDestination="@id/loginFragment">

    <include app:graph="@navigation/purchase_flow_nav_graph" />

    <action
        android:id="@+id/action_show_purchase_flow"
        app:destination="@id/purchase_flow_nav_graph"
        app:enterAnim="@anim/enterAnim"
        app:exitAnim="@anim/exitAnim"
        app:popEnterAnim="@anim/popEnterAnim"
        app:popExitAnim="@anim/popExitAnim" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="de.crysxd.octoapp.signin.ui.SignInFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_signin">
        <action
            android:id="@+id/actionReadQrCode"
            app:destination="@id/readQrCodeFragment"
            app:enterAnim="@anim/enterAnim"
            app:exitAnim="@anim/exitAnim"
            app:popEnterAnim="@anim/popEnterAnim"
            app:popExitAnim="@anim/popExitAnim" />
        <action
            android:id="@+id/actionTroubleShoot"
            app:destination="@id/troubleShootingFragment" />
    </fragment>

    <fragment
        android:id="@+id/readQrCodeFragment"
        android:name="de.crysxd.octoapp.signin.ui.ReadQrCodeFragment"
        tools:layout="@layout/fragment_read_qr_code"
        android:label="ReadQrCodeFragment" />
    <fragment
        android:id="@+id/troubleShootingFragment"
        android:name="de.crysxd.octoapp.signin.troubleshoot.TroubleShootingFragment"
        android:label="TroubleShootingFragment"
        tools:layout="@layout/fragment_trouble_shooting">>
        <argument
            android:name="baseUrl"
            app:argType="android.net.Uri" />
        <argument
            android:name="apiKey"
            app:argType="string" />
    </fragment>

</navigation>