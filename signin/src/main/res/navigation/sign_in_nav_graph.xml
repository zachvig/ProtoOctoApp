<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_in_nav_graph"
    app:startDestination="@id/discoverFragment">

    <include app:graph="@navigation/purchase_flow_nav_graph" />
    <include app:graph="@navigation/trouble_shoot_nav_graph" />

    <action
        android:id="@+id/action_trouble_shoot"
        app:destination="@id/trouble_shoot_nav_graph"
        app:enterAnim="@anim/enterAnim"
        app:exitAnim="@anim/exitAnim"
        app:popEnterAnim="@anim/popEnterAnim"
        app:popExitAnim="@anim/popExitAnim" />

    <action
        android:id="@+id/action_show_purchase_flow"
        app:destination="@id/purchase_flow_nav_graph"
        app:enterAnim="@anim/enterAnim"
        app:exitAnim="@anim/exitAnim"
        app:popEnterAnim="@anim/popEnterAnim"
        app:popExitAnim="@anim/popExitAnim" />

    <fragment
        android:id="@+id/discoverFragment"
        android:name="de.crysxd.octoapp.signin.discover.DiscoverFragment"
        android:label="DiscoverFragment"
        tools:layout="@layout/discover_fragment_initial">
        <action
            android:id="@+id/action_manual_sign_in"
            app:destination="@id/manualWebUrlFragment"
            app:enterAnim="@anim/enterAnim"
            app:exitAnim="@anim/exitAnim"
            app:popEnterAnim="@anim/popEnterAnim"
            app:popExitAnim="@anim/popExitAnim" />
    </fragment>

    <fragment
        android:id="@+id/readQrCodeFragment"
        android:name="de.crysxd.octoapp.signin.ui.ReadQrCodeFragment"
        android:label="ReadQrCodeFragment"
        tools:layout="@layout/read_qr_code_fragment" />

    <fragment
        android:id="@+id/manualWebUrlFragment"
        android:name="de.crysxd.octoapp.signin.manual.ManualWebUrlFragment"
        android:label="ManualWebUrlFragment"
        tools:layout="@layout/manual_web_url_fragment" />

</navigation>